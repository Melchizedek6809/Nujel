;; Some functions manipulating binary date

[defn lognand l
      "Returns the Nand of its arguments"
      [lognot [apply logand l]]]

[defn bit-set?! [i]
      [def mask [ash 1 i]]
      [λ [α] [not [zero? [logand α mask]]]]]

[defn bit-clear?! [i]
      [def mask [ash 1 i]]
      [λ [α] [zero? [logand α mask]]]]
