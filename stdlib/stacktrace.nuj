[defun describe/closure [c i]
       [when c
             [def info [closure c]]
             [when [and info [info :call]]
                   [cat [ansi-blue [cat [int i] "# " [str/write c]]]
                        " - "
                        [str/write [info :data]]
                        "\r\n"
                        [describe/closure [closure-caller c] [+ [int i] 1]]]]]
]

[defun stacktrace []
          [display [describe/closure [closure-caller [current-lambda]]]]
]
